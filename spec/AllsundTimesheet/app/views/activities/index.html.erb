<p id="notice"><%= notice %></p>

<h1>Listing Activities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Client</th>
      <th>Budget</th>
      <th>Revenue</th>
      <th>Chargeable</th>
      <th>Productive</th>
      <th>Utilised</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.name %></td>
        <td><%= activity.client.name %></td>
        <td><%= activity.budget %></td>
        <td><%= activity.revenue %></td>
        <td><%= check_box_tag 'Chargeable', activity.chargeable, activity.chargeable, disabled: true %></td>
        <td><%= check_box_tag 'Productive', activity.productive, activity.productive, disabled: true %></td>
        <td><%= check_box_tag 'Utilised', activity.utilised, activity.utilised, disabled: true %></td>
        <td><%= activity.notes %></td>
        <td><%= link_to 'Show', activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

