<p id="notice"><%= notice %></p>

<h1>Listing Timesheets</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Employee</th>
      <th>Activity</th>
      <th>Time</th>
      <th>Workstream</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @timesheets.each do |timesheet| %>
      <tr>
        <td><%= timesheet.date %></td>
        <td><%= timesheet.employee.name %></td>
        <td><%= timesheet.activity.name %></td>
        <td><%= timesheet.day.timeslot %></td>
        <td><%= timesheet.workstream.name %></td>
        <td><%= timesheet.notes %></td>
        <td><%= link_to 'Show', timesheet %></td>
        <td><%= link_to 'Edit', edit_timesheet_path(timesheet) %></td>
        <td><%= link_to 'Destroy', timesheet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

